<!DOCTYPE html>
<html> 
    <head>
        <script src="mysiteJS.js"></script>
        <script>
            function fn(){
                var n=prompt("Enter your name:");
                var t=confirm("Are you sure you are "+n);
                if(t){
                    alert("Welcome "+ n+"!!");
                }
                else{
                    alert("Intruder alert box!!");
                }
            }
        </script>
    </head>
    <body>
        Enter x:<input type="text" id="x"><br><br>
        Enter y:<input type="text" id="y"><br><br>
        <div id="res"></div>
        <br><br>
        <button onclick="add();">Add</button>
        <hr>
        <br>
        <button onclick="fn();">FnClick</button>
        <hr>
